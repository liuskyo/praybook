<div class="form-group">
<%=f.label :title,"標題"%>
<%=f.text_field :title, :class=>"form-control" %>
</div>

<div class="form-group">
  <%=f.label :category_id,"類別"%>
  <%=f.select :category_id,Category.all.map{|x|[x.name,x.id]},:class=>"form_control", :required => true, :include_blank=>"請選擇"%>
</div>

<div class="form-group">
<%=f.label :content,"內容"%>
<%=f.text_area :content, :class=>"form-control" %>
</div>

